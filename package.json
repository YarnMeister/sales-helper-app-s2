{
  "name": "sales-helper-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm run env:check && npm run db:migrate && next dev",
    "build": "npm run env:check && next build",
    "build:debug": "npm run debug:typescript && npm run env:check && next build",
    "start": "npm run env:check && next start",
    "lint": "next lint",
    "test": "vitest run",
    "test:ci": "vitest run --reporter=default",
    "test:dev": "vitest --reporter=default --no-bail",
    "debug:typescript": "node scripts/debug-typescript.js",
    "test:watch": "vitest",
    "test:quiet": "vitest run --reporter=dot --silent --bail=1",
    "db:migrate": "node scripts/unified-migrate.js",
    "db:generate": "drizzle-kit generate",
    "db:push": "echo '‚ùå db:push is disabled. Use db:migrate instead.' && exit 1",
    "db:studio": "drizzle-kit studio",
    "db:bootstrap-websocket": "tsx scripts/run-websocket-migrations.ts",
    "db:reset-dev": "node scripts/recreate-dev-db.js && npm run db:migrate --sync-only",
    "db:sync": "node scripts/unified-migrate.js --sync-only",
    "env:check": "node scripts/env-check.js",
    "neon:list": "./scripts/neon-utils.sh list",
    "neon:create": "./scripts/neon-utils.sh create",
    "neon:delete": "./scripts/neon-utils.sh delete",
    "neon:migrate": "./scripts/neon-utils.sh migrate",
    "neon:setup": "./scripts/neon-utils.sh setup-env",
    "neon:current": "./scripts/neon-utils.sh current",
    "neon:cleanup": "./scripts/neon-utils.sh cleanup",
    "neon:info": "./scripts/neon-utils.sh info",
    "neon:schema-diff": "./scripts/neon-utils.sh schema-diff",
    "db:setup-dev": "./scripts/setup-env.sh dev",
    "db:setup-preview": "./scripts/setup-env.sh preview/pr-123",
    "db:migrate-dev": "./scripts/migrate-env.sh dev",
    "db:migrate-preview": "./scripts/migrate-env.sh preview/pr-123",
    "db:migrate-prod": "./scripts/migrate-env.sh main",
    "workflow:update": "./scripts/update-workflow-state.sh",
    "test:clean-build": "./scripts/test-clean-build.sh"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.1",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-toast": "^1.2.15",
    "@remixicon/react": "^4.6.0",
    "@types/pg": "^8.15.5",
    "@upstash/redis": "^1.35.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.5",
    "lucide-react": "^0.539.0",
    "next": "^14.2.31",
    "pg": "^8.16.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^3.1.2",
    "tailwind-merge": "^3.3.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.12",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.21",
    "drizzle-kit": "^0.31.4",
    "eslint": "^8.0.0",
    "eslint-config-next": "14.0.0",
    "jsdom": "^26.1.0",
