{
  "git": {
    "deploymentEnabled": {
      "main": true
    }
  },
  "buildCommand": "npm run env:check && npm run db:migrate-prod && npm run build",
  "installCommand": "npm install",
  "framework": "nextjs",
  "ignoreCommand": "echo 'Preview deployments disabled' && exit 1",
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "regions": ["iad1"],
  "public": false
}
